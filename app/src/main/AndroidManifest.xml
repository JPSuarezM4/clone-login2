<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ps.dbloginuser">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">




        <!-- Actividad de inicio (Launcher) - SplashActivity -->
        <activity
            android:name=".SplashActivity"
            android:label="Desarrollo App"
            android:exported="true"
         >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de inicio de sesión - LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:exported="true">
        </activity>

        <!-- Actividad del menú de usuario - MenuUsuarioActivity -->
        <activity
            android:name=".MenuUsuarioActivity"
            android:label="Menú de Usuario"
            android:exported="true">
        </activity>

        <!-- Otras configuraciones y permisos -->

    </application>

    <!-- Permisos requeridos (ajusta según tus necesidades) -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
